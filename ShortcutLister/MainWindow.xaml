<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShortcutLister"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="ShortcutLister.MainWindow"
        mc:Ignorable="d"
        xmlns:p="clr-namespace:ShortcutLister.Properties"
        Title="ShortcutLister Settings" Height="350" Width="525">
    <Grid>
        <TextBlock x:Name="textBlockInstructions" HorizontalAlignment="Left" Margin="28,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="{x:Static p:Resources.Instructions}"/>
        <Button x:Name="buttonOpenFolder" Content="{x:Static p:Resources.OpenFolder}" HorizontalAlignment="Left" Margin="28,46,0,0" VerticalAlignment="Top" Width="75" Click="buttonOpenFolder_Click"/>
    </Grid>
</Window>
